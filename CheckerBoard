public class CheckerBoard {
    public static void main(String[] args) {
        int row, col;

        for (row=1; row<=7; row++){
            if ((row%2) == 0){
                System.out.print(" ");
            }
            for (col=1; col<=7; col++){
                System.out.print("#  ");
            }
            System.out.println();

        }
    }
}
